<%- include('../_partial/_header'); -%>

<div class="row">
    <div class="col-md-6">
        <h1>Add Place</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form action="/places/add" method="POST" enctype="multipart/form-data">
            <div class="form-group">

                <label for="inputName">Title</label>
                <input type="text" class="form-control" placeholder="Name" id="inputName" name="name">
            </div>

            <div class="form-group">
                <label for="inputContent">Content</label>
                <textarea class="form-control" rows="4" id="inputContent" placeholder="Content" name="content"></textarea>
            </div>

            <!-- Add file field -->
            <div class="form-group">
                <input type="file" name="image">
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-default" role="button">Create</button>
            </div>
        </form>
    </div>
</div>


<%- include('../_partial/_footer'); -%>