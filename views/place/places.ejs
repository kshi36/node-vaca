<%- include('../_partial/_header'); %>

<div class="container">
    <h1 class="my-4">My Places</h1>

    <!-- Carousel List of categories-->
    <div class="carousel-container">
        <% for (const [category, places] of Object.entries(categories)) { %>
            <!-- Category title -->
            <h2><%= category %></h2>
            <div class="carousel-slider">

                <% places.forEach((place) => { %>
                    <a href="places/album/<%= place._id %>">
                        <div class="card card-body"><%= place.name %></div>
                    </a>
                <% }) %>
            </div>
            <hr/>
        <% } %>

    </div>
</div>

<%- include('../_partial/_footer'); %>

